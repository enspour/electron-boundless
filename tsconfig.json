{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "*": ["node_modules/*"],
      
      "@ipc/*": ["src/global/ipc/*"],
      "@global/*": ["src/global/*"],
      "@declarations/*": ["src/declarations/*"],

      "@components/*": ["src/renderer/components/*"],
      "@services/*": ["src/renderer/services/*"],
      "@services": ["src/renderer/services/index.ts"],
      "@hooks/*": ["src/renderer/hooks/*"],
      "@redux": ["src/renderer/redux/index.ts"],
      "@constants": ["src/renderer/constants/index.ts"],
      "@assets/*": ["src/renderer/assets/*"],
      "@utils": ["src/renderer/utils/index.ts"],

      "@main-utils": ["src/main/utils/index.ts"],
      "@main-services": ["src/main/services/index.ts"],
      "@main-services/*": ["src/main/services/*"],
    }
  },
  "include": ["src/**/*"],
}
